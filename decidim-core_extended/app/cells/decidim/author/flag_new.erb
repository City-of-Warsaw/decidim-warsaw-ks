<% if flaggable? %>
  <button type="button" class="link-alt flag" data-open="<%= "flagModalRemark" %>" title="<%= t("report", scope: "decidim.proposals.proposals.show") %>" aria-controls="<%= current_user.present? ? "flagModalRemark#{model.id}" : "loginModal" %>" aria-haspopup="true" tabindex="0">
    <%= t("report", scope: "decidim.proposals.proposals.show") %>
  </button>
  <%= cell("decidim/flag_modal", model, modal_id: "flagModalRemark#{model.id}") %>
<% end %>
