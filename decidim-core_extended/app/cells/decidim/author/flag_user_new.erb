<% if user_flaggable? && model.try(:id) != current_user.try(:id) %>
  <button type="button" class="button button-primary hollow small button-centered mt-s mb-s" data-open="<%= current_user.present? ? "flagUserModal" : "loginModal" %>" title="<%= t("report", scope: "decidim.proposals.proposals.show") %>" aria-controls="<%= current_user.present? ? "flagUserModal" : "loginModal" %>" aria-haspopup="true" tabindex="0">
    <%= t("report", scope: "decidim.proposals.proposals.show") %>
  </button>
  <%= cell("decidim/flag_modal", model).flag_user %>
<% end %>
