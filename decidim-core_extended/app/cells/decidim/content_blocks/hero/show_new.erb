<section class="extended hero home-section">
  <div class="hero__bg-image">
    <%= image_tag(background_image, alt: hero_image_alt) %>
  </div>

  <div class="hero__container">
    <div class="row">
      <div class="columns small-centered large-10">
        <h1 class="text-highlight heading1 hero-heading">
          <% if translated_welcome_text.blank? %>
            <%= t("decidim.pages.home.hero.welcome", organization: current_organization.name) %>
          <% else %>
            <%= decidim_sanitize translated_welcome_text %>
          <% end %>
        </h1>
      </div>
    </div>
    <div class="row">
      <div class="columns small-centered small-12 medium-12 mediumlarge-12">
        <h2 class="hero-second-heading white-text"><%= text_from_button %></h2>
      </div>
    </div>
  </div>
  <%= consultation_decor %>
</section>
