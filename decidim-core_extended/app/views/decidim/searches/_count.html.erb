<div class="columns large-12">
  <div class="search-input-wrapper">
    <%= form_tag(decidim.search_path, method: :get) do %>
      <div class="input-group input-group--search">
        <%= label_tag "input-search" do %>
          <%= text_field_tag(
            :term,
            nil,
            class: "input-group-field--big",
            id: "input-search",
            value: params[:term] || params.dig(:filter, :term),
            placeholder: t("decidim.search.term_input_placeholder"),
            title: t("decidim.search.term_input_placeholder")
          ) %>
        <% end %>
        <div class="input-group-button">
          <button type="submit" class="button">
            <%= icon "magnifying-glass", aria_label: t("decidim.search.term_input_placeholder"), role: "img" %>
          </button>
        </div>
      </div>
    <% end %>
  </div>

  <h1 class="section-heading section-heading--search-count">
    Liczba wynik√≥w dla "<%= term %>": <strong><%= @results_count %></strong> 
  </h1>
</div>