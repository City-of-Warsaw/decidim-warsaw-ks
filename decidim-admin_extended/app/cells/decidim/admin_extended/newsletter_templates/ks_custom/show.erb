<% if organization_primary_color %>
<style>
  table.button table td { background: <%= organization_primary_color %> !important; }

  .decidim-bar { background-color: #ffffff !important; }

  .organization-logo {
      max-height: 40px !important;
      margin: auto !important;
  }

  .real-content {
      max-width: 792px !important;
      margin: auto !important;
      text-align: center !important;
  }

  .relative { position: relative !important; }
  .shadowed img { filter: brightness(70%); }

  .consultation-decor {
      position: absolute;
      bottom: -0.5px;
      width: 100%;
      height: 68px;
      display: flex;
      justify-content: space-between;
  }

  .consultation-decor .left {
      background-color: white;
      width: calc(75% - 50px);
      height: 68px;
      position: relative;
  }

  .consultation-decor .left:before {
      content: '';
      position: absolute;
      top: 0;
      right: -50px;
      border-top: 68px solid transparent;
      border-left: 50.5px solid white;
      width: 0;
  }

  .consultation-decor .colored-box {
      background-color: <%= organization_primary_color %>;
      width: calc(100% - (34px / 2.525));
      height: 18px;
      top: -18px;
      position: relative;
  }

  .consultation-decor .colored-box:before {
      content: '';
      position: absolute;
      top: 0;
      right: -13.5px;
      border-top: 18px solid transparent;
      border-left: 14px solid <%= organization_primary_color %>;
      -webkit-box-shadow: -1px 0px 0px 0px <%= organization_primary_color %>;
      -moz-box-shadow: -1px 0px 0px 0px <%= organization_primary_color %>;
      box-shadow: -1px 0px 0px 0px <%= organization_primary_color %>;
      width: 0;
  }

  .consultation-decor .right {
      background-color: white;
      width: calc(30% - 50px);
      height: 68px;
      position: relative;
  }

  .consultation-decor .right:before {
      content: '';
      position: absolute;
      top: 0;
      left: -50px;
      border-top: 68px solid transparent;
      border-right: 50.5px solid white;
      width: 0;
  }

  .header-box {
      position: absolute;
      top: 0;
      width: 100%;
      height: calc(100% - 68px);
      display: table;
  }
  h1 {
      color: #ffffff !important;
      text-align: center;
      display: table-cell;
      width: 100%;
      height: 100%;
      font-size: 40px;
      font-weight: bold;
      vertical-align: middle;
  }

  .lead {
      margin-top: 20px;
      font-size: 30px !important;
      display: block !important;
      margin-bottom: 30px !important;
  }

  .flexed-paragraph {
      padding: 0 20px;
      text-align: center;
  }

  .flexed-paragraph table {
      display: inline;
      vertical-align: middle;
  }

  .flexed-paragraph table td {
      color: #ffffff;
      font-size: 16px;
      display: inline-block;
      border-radius: 3px;
      min-width: 120px;
      text-align: center !important;
      padding: 10px 16px;
      background-color: <%= organization_primary_color %>; 
  }

  .flexed-paragraph table td a {
      color: #ffffff;
  }

  .encouragement {
      font-size: 20px;
      max-width: calc(100% - 120px);
      padding-right: 8px;
      padding-left: 8px;
      color: <%= organization_primary_color %> !important;
      text-transform: uppercase;
      vertical-align: middle;
      line-height: 40px;
  }

  .encouragement-btn {
      line-height: 40px;
      padding-right: 8px;
      padding-left: 8px;
  }

  .text-center {
      text-align: center
  }
</style>
<% end %>

<table class="main container">
  <tr>
    <td class="decidim-bar">
      <table class="row collapse">
        <tr>
          <th class="small-3 large-3 first columns decidim-bar">
            <table>
              <tr>
                <th>
                </th>
              </tr>
            </table>
          </th>
          <th class="small-6 large-6 columns decidim-bar" style="background-color: #ffffff">
            <table>
              <tr>
                <th>
                  <div class='text-center'>
                    <%= link_to decidim.root_url(host: organization.host) do %>
                      <% if organization.logo.present? %>
                        <%= image_tag organization.logo.medium.url, class: "organization-logo", alt: "#{organization.name}" %>
                      <% else %>
                        <span><%= organization.name %></span>
                      <% end %>
                    <% end %>
                  </div>
                </th>
              </tr>
            </table>
          </th>
          <th class="small-3 large-3 last columns decidim-bar">
            <table>
              <tr>
                <th>
                  <% if organization.official_img_header? %>
                    <%= link_to organization.official_url do %>
                      <%= image_tag organization.official_img_header.url , alt: "", style: "max-height: 50px", class: "float-right" %>
                    <% end %>
                  <% end %>
                </th>
              </tr>
            </table>
          </th>
          <th class="expander"></th>
        </tr>
      </table>
    </td>
  </tr>
  <tr>
    <td class="real-content">
      <% if has_main_image? %>
        <table class="row content image">
          <tr>
            <th class="small-12 first columns relative">
              <div class="relative">
                <div class="shadowed"><%= main_image %></div>
                <div class="header-box">
                  <h1>
                    <%= title %>
                  </h1>
                </div>
                <div class="consultation-decor">
                  <div class="left">
                    <div class="colored-box"></div>
                  </div>
                  <div class="right"></div>
                </div>
              </div>
            </th>
            <th class="expander"></th>
          </tr>
        </table>
      <% end %>

      <table class="row content">
        <tr>
          <th class="small-12 first columns">
            <span class="lead"><%= lead %></span>
            <span class="introduction"><%= introduction %></span>

            <% if has_cta? %>
              <p>&nbsp;</p>
              <div class="flexed-paragraph">
                <span class="encouragement"><%= encouragement %></span>

                <table class="encouragement-btn" cellspacing="0" cellpadding="0">
                  <tr>
                    <td>
                      <%= link_to cta_text, cta_url, target: :blank %>
                    </td>
                  </tr>
                </table>
              </div>
              <p>&nbsp;</p>
            <% else %>
              <p>&nbsp;</p>
              <p class='text-center'>
                <%= lead %>
              </p>
              <p>&nbsp;</p>
            <% end %>

            <%= body %>
          </th>
          <th class="expander"></th>
        </tr>
      </table>

      <table class="row">
        <tr>
          <th class="small-12 first columns">
          </th>
          <th class="expander"></th>
        </tr>
      </table>

      <table class="row">
        <tr>
          <th class="expander"></th>
          <th class="small-12 first columns cityhall-bar">
            <div class="decidim-logo" style="float: right; text-align: right; padding-right: 16px">
            </div>
          </th>
        </tr>
      </table>
    </td>
  </tr>
</table>
