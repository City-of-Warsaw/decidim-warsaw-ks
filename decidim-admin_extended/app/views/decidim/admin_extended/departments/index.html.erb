<div class="card">
  <div class="card-divider">
    <h2 class="card-title">
      <%= t("departments.title", scope: "decidim.admin") %>
      <% if allowed_to? :update, :organization %>
        <%= link_to t("actions.add", scope: "decidim.admin"), new_department_path, class: "button tiny button--title new" %>
      <% end %>
    </h2>
  </div>

  <div class="card-section">
    <div class="table-scroll">
      <table class="table-list">
        <thead>
          <th><%= t(".headers.name") %></th>
          <th><%= t(".headers.actions") %></th>
        </thead>

        <tbody>
          <%= render partial: "department", collection: @items.order('name ASC') %>
        </tbody>
      </table>
    </div>
  </div>
</div>
