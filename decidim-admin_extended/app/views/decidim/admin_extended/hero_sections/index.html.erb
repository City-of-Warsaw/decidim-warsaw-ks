<div class="card">
  <div class="card-divider">
    <h2 class="card-title">
      <%= t("hero_sections.title", scope: "decidim.admin") %>
    </h2>
  </div>

  <div class="card-section">
    <div class="table-scroll">
      <table class="table-list">
        <thead>
          <th><%= t(".headers.name") %></th>
          <th><%= t(".headers.updated_at") %></th>
          <th></th>
        </thead>

        <tbody>
        <% hero_sections.each do |section| %>
          <tr>
            <td>
              <%= section.title %>
            </td>
            <td>
              <%= l(section.updated_at, format: :decidim_short) %>
            </td>
            <td class="table-list__actions">
              <%# if allowed_to? :update, :organization, organization: current_organization %>
                <%= icon_link_to "pencil", [:edit, section], t("actions.edit", scope: "decidim.admin"), class: "action-icon--edit", method: :get, data: {} %>
                <%= icon_link_to "eye", decidim_admin_extended.hero_section_path(section), t("actions.preview", scope: "decidim.admin"), class: "action-icon--preview" %>
              <%# end %>
            </td>
          </tr>
        <% end %>
        <tbody>
      </table>
    </div>
  </div>
</div>
