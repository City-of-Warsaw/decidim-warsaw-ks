<div class="card">
  <div class="card-divider">
    <h2 class="card-title">
      <%= t(".title") %>:
      <%= hero_section.title %>
    </h2>
  </div>

  <div class="card-section">
    <div class="row column">
      <%= t(".hs_title") %>:
      <%= hero_section.title %>
    </div>
    <br>

    <div class="row column">
      <%= t(".hs_subtitle") %>:
      <%= hero_section.subtitle %>
    </div>
    <br>

    <div class="row">
      <div class="columns xlarge-6">
        <%= t(".hs_baner_img") %>:
        <% if hero_section.banner_img.attached? %>
          <%= image_tag(
                Rails.application.routes.url_helpers.rails_representation_path(
                  hero_section.banner_img.variant(resize: "100x100^").processed, only_path: true)
              )
          %>
          <%= icon_link_to "data-transfer-download",
                          Rails.application.routes.url_helpers.rails_blob_path(
                            hero_section.banner_img, only_path: true),
                           t(".hs_download_img"),
                          class: "action-icon--data-transfer-download"
          %>
        <% end %>
      </div>
    </div>
    <br>

    <div class="row column">
      <%= t(".hs_baner_img_alt") %>:
      <%= hero_section.banner_img_alt %>
    </div>
    <br>

    <div class="row column">
      <%= t(".hs_system_name") %>:
      <%= hero_section.system_name %>
    </div>
    <br>

    <div class="row column">
      <%= t(".hs_update_at") %>:
      <%= l(hero_section.updated_at, format: :decidim_short) %>
    </div>
  </div>
</div>
