<div class="card" id="area-types">
  <div class="card-divider">
    <h2 class="card-title">
      <%= t "decidim.admin.titles.mail_templates" %>
    </h2>
  </div>
  <div class="card-section">
    <div class="table-scroll">
      <table class="table-list">
        <thead>
        <tr>
          <th><%= t("models.mail_template.fields.name", scope: "decidim.admin") %></th>
          <th><%= t("models.mail_template.fields.subject", scope: "decidim.admin") %></th>
          <th>Aktywny</th>
          <th></th>
        </tr>
        </thead>
        <tbody>
        <% mail_templates.each do |mail_template| %>
          <tr>
            <td>
              <%= mail_template.name %>
            </td>
            <td style="text-align: left;">
              <% if mail_template.subject.blank? %>
                <%= icon "warning" %>
                Mail nie ma jeszcze tytułu
                <br>
              <% end %>
              <% if mail_template.body.blank? %>
                <%= icon "warning" %>
                Mail nie ma jeszcze treści
              <% end %>
              <%= mail_template.subject %>
            </td>
            <td>
              <%= mail_template.active? ? 'Tak' : 'Nie' %>
            </td>

            <td class="table-list__actions">
              <% if allowed_to? :update, :organization, organization: current_organization %>
                <%= icon_link_to "pencil", [:edit, mail_template], t("actions.edit", scope: "decidim.admin"), class: "action-icon--edit", method: :get, data: {} %>
              <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
