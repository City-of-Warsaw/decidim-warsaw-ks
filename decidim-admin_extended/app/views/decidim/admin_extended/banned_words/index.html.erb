<div class="card">
  <div class="card-divider">
    <h2 class="card-title">
      <%= t("banned_words.title", scope: "decidim.admin") %>
      <% if allowed_to? :manage, :banned_words %>
        <%= link_to t("actions.add", scope: "decidim.admin"), new_banned_word_path, class: "button tiny button--title new" %>
      <% end %>
    </h2>
  </div>

  <div class="card-section">
    <div class="table-scroll">
      <table class="table-list">
        <thead>
          <th><%= t(".headers.name") %></th>
          <th></th>
        </thead>

        <tbody>
          <%= render partial: "banned_word", collection: banned_words %>
        </tbody>
      </table>
    </div>
  </div>
</div>
