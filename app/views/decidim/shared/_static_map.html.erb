<% if geolocalizable.address.present? || geolocalizable.is_a?(Decidim::Meetings::Meeting) %>
  <div class="card card--secondary">
    <div class="card__content address on-show-view">
      <div class="address__info">
        <div class="address__details">
          <%= render "decidim/shared/address_details", geolocalizable: geolocalizable %>
        </div>
      </div>
      <% if Decidim::Map.available?(:static) || Decidim::Map.available?(:dynamic) %>
        <div class="address__map" style="width: 240px;">
          <%= static_map_link(geolocalizable) %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
