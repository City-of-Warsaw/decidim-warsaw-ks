<div class="hide-for-medium mobile-search-box">
  <div class="topbar__search js-append">
    <%= form_tag(decidim.search_path, method: :get, id: "form-search_topbar_mobile") do %>
      <div class="input-group">
        <label>
          <span class="show-for-sr"><%= t("decidim.search.term_input_placeholder") %></span>
          <%= text_field_tag :term, nil, class: "input-group-field m-none", id: "term_mobile", placeholder: t("decidim.search.term_input_placeholder") %>
        </label>
        <div class="input-group-button">
          <!-- The button wrapper is important for Safari and Firefox -->
          <div class="button-wrapper">
            <%= submit_tag icon("magnifying-glass", aria_label: t("decidim.search.term_input_placeholder"), role: "img"), id: "submit_mobile", class: "button" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
