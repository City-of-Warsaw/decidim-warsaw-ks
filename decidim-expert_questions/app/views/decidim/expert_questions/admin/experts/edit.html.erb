<%= decidim_form_for(@form, url: { action: "update" }, html: { class: "form experts_form edit_expert" })  do |f| %>
  <%= render partial: "form", object: f, locals: { title: "#{t(".title")} -  #{expert.position_and_name}" } %>

  <div class="button--double form-general-submit">
    <%= f.submit t(".update") %>

    <% if allowed_to? :publish, :expert %>
      <% if expert.published? %>
        <%= link_to t("actions.unpublish", scope: "decidim.admin"), unpublish_expert_path(expert), method: :put, class: "button muted" %>
      <% else %>
        <%= link_to t("actions.publish", scope: "decidim.admin"), publish_expert_path(expert), method: :put, class: "button hollow" %>
      <% end %>
    <% end %>
  </div>
<% end %>
