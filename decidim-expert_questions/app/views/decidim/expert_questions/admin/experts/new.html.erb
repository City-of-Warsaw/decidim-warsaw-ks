<%= decidim_form_for(@form, html: { class: "form experts_form new_expert" }) do |f| %>
  <%= render partial: "form", object: f, locals: { title: t(".title") } %>

  <div class="button--double form-general-submit">
    <%= f.submit t(".create") %>

    <% if allowed_to? :publish, :expert %>
      <%= link_to t("actions.unpublish", scope: "decidim.admin"), experts_path(expert, publish: 'true'), class: "button muted" %>
    <% end %>
  </div>
<% end %>
