<div class="column large-12 mb-0" id="<%= dom_id(model) %>">
  <a href='<%= resource_path %>' class="card forum-article">
    <div class="card__content row columns">
      <div class="column large-8">
        <div class="card__header">
          <div class="card__title">
            <%= title %>
          </div>
        </div>

        <div class="card__text">
          <div class="card__text--paragraph">
            <%= description %>
          </div>
        </div>

      </div>
      <div class="column large-4">

        <%= render :data %>
      </div>
    </div>
    <%#= render :footer %>
  </a>
</div>
